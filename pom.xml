<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.si2m.socle.security</groupId>
	<artifactId>crypt-util-cli</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<name>SOC</name>
	<scm>
		<url>http://lana2029:8080/svn/arch_java_si2m/crypt-util-cli/trunk</url>
		<connection>scm:svn:http://lana2029:8080/svn/arch_java_si2m/crypt-util-cli/trunk</connection>
		<developerConnection>scm:svn:http://lana2029:8080/svn/arch_java_si2m/crypt-util-cli/trunk</developerConnection>
	</scm>
	<distributionManagement>
		<repository>
			<id>releases</id>
			<url>http://vliql-usil.si2m.tec:8081/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>snapshots</id>
			<url>http://vliql-usil.si2m.tec:8081/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<archive>
						<manifestEntries>
							<Specification-Title>${pom.artifactId}</Specification-Title>
							<Specification-Version>N/A</Specification-Version>
							<Specification-Vendor>MALAKOFF-MEDERIC (should be ...)</Specification-Vendor>
							<Implementation-Title>${pom.name}</Implementation-Title>
							<Implementation-Version>${pom.version}</Implementation-Version>
							<Implementation-Vendor>SI2M</Implementation-Vendor>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>yDoc-in-the-place</id>
			<properties>
				<yDoc>/home/nta/Installes/yworks-uml-doclet-3.0_02-jdk1.5</yDoc>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<configuration>
							<show>private</show>
							<doclet>ydoc.doclets.YStandard</doclet>
							<docletPath>${yDoc}/lib/ydoc.jar:${yDoc}/resources</docletPath>
							<detectLinks>true</detectLinks>
							<additionalparam>-link http://java.sun.com/j2se/1.5.0/docs/api/ -umlautogen</additionalparam>
						</configuration>
						<executions>
							<execution>
								<id>javadoc-jar</id>
								<phase>package</phase>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
